{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="login-form">
	<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
	<fieldset>
		<legend>{{ 'security.signin'|trans({}, 'FOSUserBundle') }}</legend>
		
		<div class="clearfix">
		    <label for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
		    <div class="input">
		    	<input type="text" id="username" name="_username" value="{{ last_username }}" />
		    </div>
		</div>
		
		<div class="clearfix">
		    <label for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
		    <div class="input">
		    	<input type="password" id="password" name="_password" />
		   	</div>
		</div>
		
		<div class="clearfix">
			<div class="input">
			    <label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" value="on" />
			    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
		    </div>
		</div>	
		
		<div class="actions">
    		<input type="submit" id="_submit" class="btn primary submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
    	</div>
    	
    </fieldset>
</form>
{% endblock fos_user_content %}
